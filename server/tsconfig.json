{
    "compilerOptions": {
        "target": "ES2020",
        "module": "ESNext",
        "moduleResolution": "bundler",
        "esModuleInterop": true,
        "strict": true,
        "skipLibCheck": true,
        "outDir": "./dist-server",
        "rootDir": "..",
        "baseUrl": "..",
        "paths": {
            "@/*": [
                "src/*"
            ]
        }
    },
    "include": [
        "./**/*.ts",
        "../src/engine/**/*.ts"
    ],
    "exclude": [
        "../node_modules"
    ]
}